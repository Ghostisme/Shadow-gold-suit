/* 金额我要提现页样式 */
/* 顶部显示样式 */
.diyi{
  color: rgb(255, 255, 255);
  display: flex;
  justify-content: center;
}
.first{
  font-size: 24rpx;
  margin-top: 36rpx;
  margin-bottom: 22rpx;
}
.secondnum{
  font-size: 48rpx;
}
.secondyuan{
  font-size: 24rpx;
  padding-left: 8rpx;
}
.third{
  font-size: 24rpx;
  margin-top: 52rpx;
  margin-bottom: 20rpx;
}
.jiantou{
  font-size: 34rpx;
  margin-top: 36rpx;
  margin-bottom: 20rpx;
}
/* 我要提现输入框样式 */
.inputbox{
  font-size: 36rpx;
  color: rgb(51, 51, 51);
  display: flex;
  margin: 20rpx 24rpx;
}
.inputnum{
  /* border: 1px solid black; */
  margin-left: 20rpx;
  margin-top: -4rpx;
  cursor: pointer;
  font-size: 24rpx;
}
.place-holder{
  color: rgb(153, 153, 153);
}
/* 分隔线 */
.linenav{
  width: 100%;
  height: 20rpx;
  background-color:rgba(0,0,0,0.1);
}
/* 提现方式样式 */
.cash{
  display: flex;
  border-bottom: 2rpx solid rgb(220, 220, 220);
}
.cash image{
  width: 84rpx;
  height: 84rpx;
  margin: 22rpx 40rpx 22rpx 22rpx;  
}
.cash text{
  font-size: 28rpx;
  color: rgb(68, 68, 68);
  flex: 5;
  margin: auto 0;
}
.cash icon{
  flex: 1;
  margin: auto 0;
}
/* 记忆支付宝账号那行样式 */
.alipaybox{
  display: flex;
  border-bottom: 2rpx solid rgb(220, 220, 220);
}
.alipaybox input{
  flex: 5;
  margin: 22rpx 40rpx 22rpx 22rpx;
  font-size: 24rpx;
}
.alipaybox checkbox{
  margin: auto 0;
  position: relative;
  top: -6rpx;
}
.alipaybox checkbox .wx-checkbox-input{
  width: 24rpx;
  height: 24rpx;
}
.alipaybox text{
  font-size: 24rpx;
  color: rgb(153, 153, 153);
  margin: auto 0;
  padding-right: 22rpx;
  position: relative;
  top: -2rpx;
}
/* 立即提现按钮 */
.sumbitbox{
  display: flex;
  margin-top: 80rpx;
}
.sumbitbox button{
  font-size: 30rpx;
  color: rgb(255, 255, 255);
  padding: 6rpx 100rpx;
  background: linear-gradient(to right, #6fc800, #5ea900); 
}
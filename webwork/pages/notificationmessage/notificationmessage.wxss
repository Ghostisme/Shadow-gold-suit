/* 通知消息内容样式 */
.jiantou{
  margin-top: 24rpx;
  margin-right: 16rpx;
}
/* 时间样式 */
.timebox{
  background-color: rgb(212, 212, 212);
  border-radius: 10rpx;
  font-size: 24rpx;
  color: rgb(255, 255, 255);
  padding: 12rpx;
  width: 64rpx;
  height: 28rpx;
  line-height: 28rpx;
  margin: 0 auto;
  justify-content: center;
  margin-top: 36rpx;
  margin-bottom: 36rpx;
  text-align: center;
}
/* 内容盒子样式 */
.outsidebox{
  display: flex;
  margin: 24rpx;
}
/* 内容样式 */
.contentbox{
  /* margin: 36rpx 28rpx 0rpx 28rpx; */
  border: 2rpx solid rgb(220, 220, 220);
  border-radius: 8rpx;
}
.first{
  margin: 36rpx 28rpx 48rpx 28rpx;
}
.one-text{
  font-size: 30rpx;
  color: rgb(51, 51, 51);
  margin-bottom: 20rpx;
}
.two-text{
  font-size: 24rpx;
  color: rgb(153 , 153, 153);
  margin-bottom: 54rpx;
}
.three-text{
  font-size: 28rpx;
  color: rgb(51, 51, 51);
  line-height: 60rpx;
}

/* 分隔线 */
.line{
  border-top: 2rpx solid rgb(220, 220, 220);
  margin-right: 22rpx;
  margin-left: 22rpx;
}


/* 第三块内容 */
.third{
  display: flex;
}
.lefttext{
  font-size: 28rpx;
  color: rgb(51, 51, 51);
  margin-top: 32rpx;
  margin-bottom: 34rpx;
  margin-left: 26rpx;
  flex: 9;
}
.righttext{
  font-size: 28rpx;
  margin-top: 32rpx;
  margin-bottom: 34rpx;
  color: rgb(102, 102, 102);
  flex: 1;
}
/* pages/payroll/payroll.wxss */

.linenav{
  width: 100%;
  height: 20rpx;
  background-color:rgba(0,0,0,0.1);
}

/* 工资单标题行的样式 */
.content-nav{
  display: flex;
}
.content-nav-left{
  font-size: 28rpx;
  color: rgb(51, 51, 51);
  flex: 7;
  padding-left: 24rpx;
  padding-top: 28rpx;
  padding-bottom: 28rpx;
}
.content-nav-right{
  font-size: 28rpx;
  color: rgb(102, 102, 102);
  flex: 2;
  padding-top: 12rpx;
  padding-bottom: 28rpx;
  padding-right: 24rpx;
}
.you{
  margin-right: 10rpx;
}
.jiantou-1{
  font-size: 30rpx;
  font-weight: bolder;
  position: relative;
  top: 1rpx;
}
/* 第二行时间样式 */
.content-center{
  background-color: rgb(247, 247, 247);
  padding-top: 22rpx;
  padding-bottom: 22rpx;
  padding-left: 24rpx;
  font-size: 28rpx;
  display: flex;
  align-content: center;
  align-items: center;
}
.xia{
  margin-right: 48rpx;
}
.jianyou-2{
  
}
/* 第三行内容样式 */
.content-list{  
  
}
.timebox{
  background-color: rgb(212, 212, 212);
  border-radius: 10rpx;
  font-size: 24rpx;
  color: rgb(255, 255, 255);
  padding: 12rpx;
  width: 64rpx;
  height: 28rpx;
  line-height: 28rpx;
  margin: 0 auto;
  justify-content: center;
  margin-top: 36rpx;
  margin-bottom: 36rpx;
  text-align: center;
}
.backimg{
  background-image: url('image/contentback.png');
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  margin: 0 auto;
}
.backboxfff{
  background-color: #ffffff;
  /* background-color: rebeccapurple; */
  margin-left: 22rpx;
  margin-right: 22rpx;
  border-radius: 8rpx;
  border: 2rpx solid rgb(220, 220, 220);
}
/* 第三行里第一块 */
.first{
  display: flex;
}
.one-box{
  margin-left: 26rpx;
  margin-top: 36rpx;
  margin-bottom: 22rpx;
  flex: 5;
}
.onedaytext{
  font-size: 28rpx;
  color: rgb(51, 51, 51);
}
.twodaytext{
  font-size: 22rpx;
  color: rgb(153, 153, 153);
  margin-top: 22rpx;
}

/* 第一行右侧按钮 */
.two-box{
  margin-top: 44rpx;
  margin-right: 44rpx;
  flex: 2;
}
.twobutton-1{
  margin-bottom: 12rpx;
}
.twobutton-1 button{
  font-size: 28rpx;
  color: rgb(255, 255, 255);
  background-color: rgb(101, 166, 7);
}
.twobutton-2 button{
  font-size: 28rpx;
  color: rgb(255, 255, 255);
  background-color: #cfcfcf;
  padding-left: 42rpx;
  padding-right: 42rpx;
}
/* 分隔线 */
.line{
  border-top: 2rpx solid rgb(220, 220, 220);
  margin-right: 22rpx;
  margin-left: 22rpx;
}
/* 第三行第二块内容 */
.second{
  display: flex;
  justify-content: center;
  margin: 38rpx auto;
}
.secondbox{
  flex: 2;
}
.one{
  font-size: 24rpx;
  color: rgb(102, 102, 102);
  text-align: center;
}
.two{
  font-size: 28rpx;
  text-align: center;
  color: rgb(101, 166, 7);
  margin-top: 30rpx;
}
/* 第三块内容 */
.third{
  display: flex;
}
.lefttext{
  font-size: 28rpx;
  color: rgb(51, 51, 51);
  margin-top: 32rpx;
  margin-bottom: 34rpx;
  margin-left: 26rpx;
  flex: 9;
}

.jiantou-3{
  margin-top: 24rpx;
  margin-right: 16rpx;
}